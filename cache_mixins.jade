mixin cache_header()
    p#site-title
        a(href="/", title=site.raw_content)= site.configs.site_name or site.configs.title
    p
        if has('posts')
            a(href='/archive') 归档
            |  /
        if site.tags
            a(href='/tags') 标签云
            |  /
        if has('images')
            a(href='/album') 相册
            |  /
        for file in ['about.txt', 'about.md', 'about.mk', 'about.markdown']
            if has(file)
                a(href='/' + file) 关于
                |  /
        a(href="/feed") 订阅

mixin cache_footer()
    p
        | 主题作者:
        a(href='http://oyiadin.farbox.com/') oyiadin
        if site.configs.author
            |  / 网站作者:
            a(href='/')= site.configs.author
        br
        a(href='http://farbox.com/') 搭载于 FarBox.com
